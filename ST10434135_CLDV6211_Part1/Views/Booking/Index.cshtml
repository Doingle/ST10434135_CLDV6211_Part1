@model IEnumerable<ST10434135_CLDV6211_Part1.Models.Bookings>

@{
    ViewBag.Title = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create" class="btn-turquoise">Create New Booking</a>
</p>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <h3>Booking ID: @Html.DisplayFor(modelItem => item.BookingID)</h3>
            <p><strong>Event ID:</strong> @Html.DisplayFor(modelItem => item.EventID)</p>
            <p><strong>Venue ID:</strong> @Html.DisplayFor(modelItem => item.VenueID)</p>
            <p><strong>Booking Date:</strong> @Html.DisplayFor(modelItem => item.BookingDate)</p>
            <p><strong>Specialist ID:</strong> @Html.DisplayFor(modelItem => item.SpecialistID)</p>
            <p>
                <a asp-action="Edit" asp-route-id="@item.BookingID" class="btn">Edit</a>
                <a asp-action="Details" asp-route-id="@item.BookingID" class="btn">Details</a>
                <a asp-action="Delete" asp-route-id="@item.BookingID" class="btn">Delete</a>
            </p>
        </div>
    }
</div>
