@model IEnumerable<ST10434135_CLDV6211_Part1.Models.Events>

@{
    ViewBag.Title = "Events";
}

<h2>Events</h2>

<p>
    <a asp-action="Create" class="btn">Create New Event</a>
</p>

<div class="card-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <h3>Event ID: @Html.DisplayFor(modelItem => item.EventID)</h3>
            <p><strong>Event Name:</strong> @Html.DisplayFor(modelItem => item.EventName)</p>
            <p><strong>Event Date:</strong> @Html.DisplayFor(modelItem => item.EventDate)</p>
            <p><strong>Description:</strong> @Html.DisplayFor(modelItem => item.Description)</p>
            <p><strong>Venue ID:</strong> @Html.DisplayFor(modelItem => item.VenueID)</p>
            <p>
                <a asp-action="Edit" asp-route-id="@item.EventID" class="btn">Edit</a>
                <a asp-action="Details" asp-route-id="@item.EventID" class="btn">Details</a>
                <a asp-action="Delete" asp-route-id="@item.EventID" class="btn">Delete</a>
            </p>
        </div>
    }
</div>
